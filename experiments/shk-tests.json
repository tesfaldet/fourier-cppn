{
    "title": "texture-cppn",
    "worker_config": {
        "memory": 8,
        "cpu": 2,
        "gpu": 1,
        "volumes": ["/mnt/projects/texture-cppn/logs:/logs", "/mnt/projects/texture-cppn/snapshots:/snapshots", "/mnt/datasets/public/texture-cppn/data:/data"]
    },
    "parameters": {
        "name": "GridSearch",
        "config": {
            "dimensions": {
                "learning_rate": [5e-4],
                "batch_size": [4],
                "iterations": [100000],
                "log_dir": ["/logs"],
                "snap_dir": ["/snapshots"],
                "data_dir": ["/data"],
                "cppn_input_dimensions": ["225,225"],
                "cppn_input_coordinate_range": ["-112,112"],
                "cppn_coord_scale_factor": ["(3**0.5)/112"],
                "cppn_num_layers": [8],
                "cppn_num_neurons": [24],
                "cppn_activation": ["atan_concat"],
                "cppn_latent_size": [10],
                "style_layers": ["conv1_1/Relu,pool1,pool2,pool3,pool4"],
                "content_layers": ["conv1_1/Relu,pool1,pool2,pool3,pool4"],
                "cppn_fourier_dimensions": ["10,10"],
                "cppn_fourier_coordinate_range": ["0,9"]
            }
        }
    }
}